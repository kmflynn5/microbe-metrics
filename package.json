{
  "name": "microbe-metrics",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "validate": "npm run format:check && npm run lint && npm run type-check && npm run build",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:staging": "npm run build && wrangler pages deploy --env staging",
    "deploy:production": "npm run build && wrangler pages deploy --env production"
  },
  "overrides": {
    "esbuild": "0.25.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.3.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.0.0"
  },
  "dependencies": {
    "@duckdb/duckdb-wasm": "^1.28.0",
    "d3": "^7.9.0"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run type-check'"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
